{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "/app/Dockerfile",
        "watchPatterns": [
            "/app/**",
            "/infrastructure/runtimes/app-1/**"
        ]
    },
    "deploy": {
        "sleepApplication": true,
        "numReplicas": 2,
        "healthcheckPath": "/status",
        "restartPolicyType": "NEVER"
    }
}